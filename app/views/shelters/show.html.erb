<p><%= button_to("List of Shelters", "/shelters") %></p>

<h1><%= @shelter.name %></h1>

<p>Address: <%= @shelter.address %><br>
City: <%= @shelter.city %><br>
State: <%= @shelter.state %><br>
Zip: <%= @shelter.zip %><br>
<%= link_to "See the pets at #{@shelter.name}!!", "/shelters/#{@shelter.id}/pets" %></p>
<%= link_to "Update Shelter", "/shelters/#{@shelter.id}/edit" %>
<br>

<% cond = @shelter.pets.any? do |pet| %>
  <% pet.adoption == "Pending" %>
<% end %>
  <% if cond == false %>
    <%= link_to "Delete #{@shelter.name}", "/shelters/#{@shelter.id}", method: :delete %>
  <% end %>


<br>
<%= link_to "Write a Review", "/shelters/#{@shelter.id}/reviews/new", {:shelterid => @shelter.id} %>
<br>

<h3><%= @shelter.name %> Summary</h3>
<p>Total Pets: <%= @shelter.total_pets %><br>
  Average Review Rating: <%= @shelter.average_rating %><br>
  Number of Applications: <%= @shelter.total_applications %>
</p>

<h3>Reviews For <%= @shelter.name %></h3>
  <% @shelter.reviews.each do |review| %>
  Title: <%= review.title %><br>
  Rating: <%= review.rating %><br>
  Content: <%= review.content %><br>
  <img src="<%= review.image %>" alt="<%= @shelter.name %>">>
  <br>
  <%= link_to "Edit Review", "/shelters/#{@shelter.id}/reviews/#{review.id}/edit" %>
  <%= link_to "Delete Review", "/shelters/#{@shelter.id}/reviews/#{review.id}", method: "delete" %>
  <% end %>
