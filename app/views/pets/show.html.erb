<p><%= button_to("List of Shelters", "/shelters") %></p>
<br>
<p><%= button_to("Favorites", "/favorites", method: :get) %></p>

<h1><%= link_to "#{@pet.name}", "/pets/#{@pet.id}" %></h1>


<div class="pets">
<section class="pets-<%= @pet.id %>">
  <%= link_to "Add To Favorites", "/favorites/#{@pet.id}", method: :patch %>
  <%= link_to "Update #{@pet.name}", "/pets/#{@pet.id}/edit" %>
  <% unless @pet.adoption == "Pending" %>
    <%= link_to "Delete Pet", "/pets/#{@pet.id}", method: :delete %>
  <% end %>
</section>
</div><br>
<p><img src="<%= @pet.image %>" width='30%' alt="<%= @pet.name %>"></p><br>
<p>Description:<%= @pet.description %></p><br>
<p>Age:<%= @pet.approximate_age %></p><br>
<p>Gender:<%= @pet.sex %></p><br>
<p>Adoptable?:<%= @pet.adoption_status %></p>
<br>

<%= link_to "View all applications for #{@pet.name}", "/pets/#{@pet.id}/applications" %>

<p>Adoption Status:<%= @pet.adoption %></p>

<% if @pet.adoption == "Pending" %>
  <p> On hold for <%= @pet.applications.find {|application| application.status == "Approved"}.name %></p>
<% end %>
