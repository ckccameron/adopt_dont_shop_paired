<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <ul class = "navbar">
        <li><%= link_to "View Shelters", "/shelters" %></li>
        <li><%= link_to "View Pets", "/pets" %></li>
        <li><%= link_to "Favorites: #{favorite.total_count}","/favorites" %></li>
      </ul>
    </nav>

    <% flash.each do |type, message| %>
      <p><%= message %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
